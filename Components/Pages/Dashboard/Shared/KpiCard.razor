@using MudBlazor

<MudPaper Class="d-flex flex-row pa-4" Elevation="2" Height="100%">
    <MudIcon Icon="@Icon" Color="Color.Primary" Class="mr-4" Style="font-size: 48px;" />
    <div>
        <MudText Typo="Typo.h5">@Value</MudText>
        <MudText Typo="Typo.body1">@Title</MudText>
        @if (!string.IsNullOrEmpty(ChipText))
        {
            <MudChip T="object" Text="@ChipText" Color="@ChipColor" Size="Size.Small" Class="mt-1" />
        }
        @if (!string.IsNullOrEmpty(SubText))
        {
            <MudText Typo="Typo.body2" Class="mt-1">@SubText</MudText>
        }
    </div>
</MudPaper>

@code {
    [Parameter] public string Icon { get; set; } = string.Empty;
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = string.Empty;
    [Parameter] public string? ChipText { get; set; }
    [Parameter] public Color ChipColor { get; set; } = Color.Default;
    [Parameter] public string? SubText { get; set; }
}
