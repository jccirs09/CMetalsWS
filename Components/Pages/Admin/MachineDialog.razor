@using CMetalsWS.Data
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
            <MudIcon Icon="@Icons.Material.Filled.Build" />
            <MudText Typo="Typo.h6">@Title</MudText>
        </MudStack>
    </TitleContent>

    <DialogContent>
        <MudPaper Class="pa-4" Elevation="0">
            <MudForm Model="@Model" @ref="form">
                <MudGrid Spacing="2">
                    <MudItem xs="12" sm="6">
                        <MudTextField @bind-Value="Model.Code" Label="Code" Required="true" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField @bind-Value="Model.Name" Label="Name" Required="true" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="Model.Description" Label="Description" Lines="3" />
                    </MudItem>
                    <MudSelect T="string" Label="Category" @bind-Value="Model.Category" Dense="true" Clearable="true">
                        @foreach (var c in _categories)
                        {
                            <MudSelectItem Value="@c">@c</MudSelectItem>
                        }
                    </MudSelect>
                    <MudItem xs="12" sm="6">
                        <MudSelect T="int" Label="Branch" @bind-Value="Model.BranchId">
                            @foreach (var b in Branches)
                            {
                                <MudSelectItem T="int" Value="b.Id">@b.Name</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                </MudGrid>
            </MudForm>
        </MudPaper>
    </DialogContent>

    <DialogActions>
        <MudSpacer />
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public Machine Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public List<Branch> Branches { get; set; } = new();

    private MudForm form = default!;
    private readonly string[] _categories = new[] { "CTL", "SLITTER", "SHEET", "COIL" };


    [CascadingParameter] public IMudDialogInstance Dialog { get; set; } = default!;

    private async Task Save()
    {
        await form.Validate();
        if (!form.IsValid) return;
        Dialog.Close(DialogResult.Ok(Model));
    }

    private void Cancel() => Dialog.Cancel();
}
