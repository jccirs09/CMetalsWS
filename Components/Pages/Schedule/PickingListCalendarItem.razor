@using CMetalsWS.Data
@using MudBlazor

<div style="width:100%;border:1px solid var(--mud-palette-lines-default);border-left:4px solid var(--mud-palette-info);border-radius:6px;overflow:hidden;">
    <div style="display:flex;align-items:center;gap:.5rem;padding:.25rem .5rem;">
        <MudIcon Icon="@Icons.Material.Filled.PanTool" Size="Size.Small" />
        <MudText Typo="Typo.body2">@PickingList.SalesOrderNumber</MudText>
        <MudSpacer />
        <MudChip T="string" Size="Size.Small" Variant="Variant.Outlined">PL @PickingList.Id</MudChip>
    </div>
    <div style="padding:0 .5rem .5rem .5rem;">
        <MudText Typo="Typo.caption">@PickingList.Customer?.CustomerName</MudText>
    </div>
</div>

@code {
    [Parameter]
    public PickingList PickingList { get; set; } = default!;
}
