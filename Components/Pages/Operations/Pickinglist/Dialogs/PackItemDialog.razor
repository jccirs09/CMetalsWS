@using CMetalsWS.Data
@using MudBlazor
@using MudBlazor.Services

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Pack Item</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_result.PackingMaterial" Label="Packing Material" />
        <MudNumericField @bind-Value="_result.ActualWeight" Label="Actual Weight" />
        <MudTextField @bind-Value="_result.Notes" Label="Notes" Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Confirm">Confirm Pack</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public PickingListItem Item { get; set; } = null!;

    private PackDialogResult _result = new();

    protected override void OnInitialized()
    {
        _result.ActualWeight = Item.Weight ?? 0;
    }

    void Confirm() => MudDialog.Close(MudBlazor.DialogResult.Ok(_result));
    void Cancel() => MudDialog.Cancel();

    public class PackDialogResult
    {
        public string PackingMaterial { get; set; } = "";
        public decimal ActualWeight { get; set; }
        public string Notes { get; set; } = "";
    }
}
