@using CMetalsWS.Data
@using MudBlazor
@using MudBlazor.Services

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Pick Item</MudText>
    </TitleContent>
    <DialogContent>
        <MudText><strong>Item:</strong> @Item.ItemDescription</MudText>
        <MudText><strong>Quantity:</strong> @Item.Quantity</MudText>
        <MudText><strong>Weight:</strong> @Item.Weight</MudText>
        <MudText><strong>Location:</strong> @Item.Location</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Confirm">Confirm Pick</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public PickingListItem Item { get; set; } = null!;

    void Confirm() => MudDialog.Close(MudBlazor.DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
