@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Pause Work Order</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_notes" Label="Reason for pausing" Required="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="string.IsNullOrWhiteSpace(_notes)">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; }

    private string _notes;

    private void Submit() => MudDialog.Close(DialogResult.Ok(_notes));
    private void Cancel() => MudDialog.Cancel();
}