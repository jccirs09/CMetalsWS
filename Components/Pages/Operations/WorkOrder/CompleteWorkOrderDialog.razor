@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Complete Work Order</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Are you sure you want to mark this work order as complete? This action cannot be undone.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Complete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog.Cancel();
}